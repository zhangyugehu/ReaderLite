page{
    height: 100%;
    background-color: #b3d4db;
}
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.user-avater{
    width: 200rpx;
    height: 200rpx;
    margin-top: 160rpx;
    background: #fff;
    padding: 5rpx;
}
